<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".BLOCK_nav_d">


    <include
        layout="@layout/content_block_nav_d"
        />
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0DB5BA"
            />



    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="55dp"
        android:background="#0DB5BA"
        android:gravity="bottom"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/level"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="109dp"
        android:background="#0DB5BA"
        android:gravity="center"
        android:text="Level"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#dbe0e0"
        android:layout_marginTop="160dp"
        android:orientation="vertical">

        <technolifestyle.com.imageslider.FlipperLayout
            android:id="@+id/vvpflipper_layout"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="28"
            tools:context=".MainActivity" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"

            android:layout_weight="63"
            android:background="#dbe0e0"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="45"
                android:background="#dbe0e0"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:background="#ffffff">

                    <ImageButton
                        android:id="@+id/att"
                        android:layout_width="100dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/att"></ImageButton>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/att"
                        android:layout_gravity="bottom"

                        android:clickable="false"
                        android:text="ATTENDANCE"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold"></TextView>


                </FrameLayout>


                <FrameLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:layout_marginLeft="5dp"
                    android:background="#ffffff">

                    <ImageButton
                        android:id="@+id/grievance"
                        android:layout_width="100dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/grievance"></ImageButton>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/grievance"
                        android:layout_gravity="bottom"

                        android:clickable="false"
                        android:gravity="center"
                        android:text="GRIEVANCE"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold"></TextView>


                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="45"
                android:background="#dbe0e0"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dip"
                    android:id="@+id/sm"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:layout_margin="5dp"
                    android:background="#ffffff">

                    <ImageButton
                        android:id="@+id/atta"
                        android:layout_width="100dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/school"></ImageButton>

                    <TextView
                        android:id="@+id/smtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/att"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="SCHOOL MONITORING"
                        android:paddingBottom="10dp"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold"></TextView>


                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"

            android:layout_height="0dip"
            android:id="@+id/empoweruweb"
            android:layout_weight="7"
            android:layout_gravity="bottom"
            android:background="#000000"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@id/empoweru"
                android:paddingTop="10dp"
                android:paddingLeft="35dp"
                android:clickable="false"
                android:text="Powered by : "
                android:layout_weight="40"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <ImageButton
                android:id="@+id/empoweru"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:background="@null"
                android:paddingTop="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="2dp"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo"></ImageButton>


            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/empoweru"
                android:clickable="false"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:text="EmpowerU.in"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>